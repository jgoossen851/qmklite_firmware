{
    "structure": {
        "summary": "_summary.md"
    },
    "plugins" : [
      "anchors",
      "edit-link",
      "etoc",
      "forkmegithub",
      "git-author",
      "hints",
      "numbered-headings",
      "terminal",
      "toolbar"
    ],
    "pluginsConfig": {
      "edit-link": {
        "base": "https://github.com/qmk/qmk_firmware/edit/master/docs",
        "label": "Suggest an edit"
      },
      "forkmegithub": {
        "color": "red",
        "url": "https://github.com/qmk/qmk_firmware"
      },
      "etoc": {
        "maxdepth": 3,
        "notoc": true
      },
      "toolbar": {
        "buttons": [
          {
            "label": "QMK Firmware",
            "icon": "fa fa-github",
            "url": "https://github.com/qmk/qmk_firmware"
          }
        ]
      }
    },
    "root": "./docs/"
}
